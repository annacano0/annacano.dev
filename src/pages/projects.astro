---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import projects from "../data/projects";
---

<BaseLayout pageTitle="projects">
  <div class="page-container">
    <section class="card-container">
      {
        projects.map((project) => (
          <article class="card">
            <div class="card-img-container">
              <img
                src={project.image.src}
                alt={project.title}
                class="card-img"
              />
            </div>
            <section class="card-info-container">
              <header>
                <h2>{project.title}</h2>
                <ul class="tech-stack">
                  {project.tech_set.map((tech) => (
                    <li class={`tech-badge ${tech.color}`}>{tech.name}</li>
                  ))}
                </ul>
              </header>
              <div>
                <p>{project.description}</p>
                <p>
                  {project.url && (
                    <span>
                      Take a look at the code:{" "}
                      <a href={project.url}>{project.url}</a>
                    </span>
                  )}
                </p>
              </div>
              <footer>
                <p class={`project-status ${project.status.statusCode}`}>
                  {project.status.statusDescription}
                </p>
              </footer>
            </section>
          </article>
        ))
      }
    </section>
  </div>
</BaseLayout>

<style>
  .page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2em 3em;
    margin-bottom: 4em;
  }

  .card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5em;
    justify-content: center;
  }

  .card {
    background-color: var(--error);
    width: 25em;
    height: 35em;
    display: flex;
    flex-direction: column;
    padding: 1em;
    border: 15px double var(--background);
    box-shadow: 8px 8px 0 var(--background);
    transition: all 0.15s ease-in-out;
  }

  .card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 12px 12px 0 var(--tertiary);
    background-color: var(--primary);
  }

  .card-img {
    width: 100%;
    border: 4px solid var(--background);
  }

  .card h2 {
    font-size: 2em;
    text-transform: uppercase;
    color: var(--background);
  }

  .card p {
    color: var(--background);
    line-height: 1.4;
  }

  .card a {
    color: var(--background);
  }

  .tech-stack {
    list-style: none;
    display: flex;
    gap: 0.5em;
    margin-bottom: 1em;
  }

  .tech-badge {
    font-size: 0.85em;
    font-weight: bold;
    padding: 0.2em 0.6em;
    border: 2px solid currentColor;
    transform: rotate(-2deg);
  }

  .tech-badge:nth-child(even) {
    transform: rotate(2deg);
  }

  .yellow {
    color: var(--yellow);
  }
  .orange {
    color: var(--orange);
  }
  .blue {
    color: var(--blue);
  }

  .card-info-container footer {
    margin-top: auto;
  }

  .project-status {
    display: inline-block;
    font-weight: bold;
    font-size: 1em;
    padding: 0.3em 0.6em;
    text-transform: uppercase;
  }

  .not-started {
    color: var(--blue);
    border: 2px solid var(--blue);
  }

  .wip {
    color: var(--orange);
    border: 2px solid var(--orange);
  }

  .completed {
    color: var(--yellow);
    border: 2px solid var(--yellow);
  }

  footer {
    display: none;
  }
</style>
